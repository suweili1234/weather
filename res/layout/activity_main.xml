<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/su1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/loudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娄底" />

        <Button
            android:id="@+id/wenzhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温州" />

        <Button
            android:id="@+id/cq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆" />
    </LinearLayout>

    <TextView
        android:id="@+id/selectsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/tb"
        android:text="娄底"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/su1"
        android:layout_below="@+id/selectsu"
        android:layout_marginTop="25dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/selectsu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tb"
        android:layout_below="@+id/tb"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="多云"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selectsu2"
        android:layout_alignRight="@+id/su1"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/femp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="-7℃"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/wd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风力:2级"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pn1"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="pn"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>